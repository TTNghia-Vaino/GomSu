<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GomSu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GomSu.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>
<body>
    <header class="bg-danger text-white py-1">
        <div class="container d-flex justify-content-between align-items-center small">
            <div>
                <i class="bi bi-geo-alt-fill"></i> 8C, Tống Hữu Định, Thảo Điền, Tp. Thủ Đức, Tp. Hồ Chí Minh
            </div>
            <div>
                <i class="bi bi-telephone-fill"></i> Hotline: <strong>113</strong>
            </div>
        </div>
    </header>

    <header class="bg-white py-3 border-bottom">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-3 text-center text-md-start">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" alt="Logo" class="img-fluid" style="max-height: 60px;" />
                    </a>
                </div>
                <div class="col-md-6">
                    <div class="d-flex justify-content-between text-center">
                        <div>
                            <img src="~/images/icon-delivery.png" width="24" />
                            <div class="small">Giao hàng toàn quốc<br /><strong>63 TỈNH THÀNH</strong></div>
                        </div>
                        <div>
                            <img src="~/images/icon-cod.png" width="24" />
                            <div class="small">Thanh toán tại nhà<br /><strong>NHẬN HÀNG - TRẢ TIỀN</strong></div>
                        </div>
                        <div>
                            <img src="~/images/icon-exchange.png" width="24" />
                            <div class="small">Đổi hàng linh hoạt<br /><strong>MIỄN PHÍ ĐỔI HÀNG</strong></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 text-center text-md-end">
                    <div class="mb-2">
                        <strong class="text-danger">Hotline: 113</strong>
                    </div>
                    <a asp-controller="Shopping" asp-action="Cart" class="text-decoration-none text-dark">
                        <i class="bi bi-cart-fill fs-4"></i> Giỏ hàng <span class="badge bg-danger">0</span>
                    </a>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-8 mx-auto">
                    <form asp-controller="Products" asp-action="Search" method="get" class="d-flex">
                        <input name="q" type="text" class="form-control" placeholder="Bạn cần tìm sản phẩm nào ..." />
                        <button class="btn btn-danger ms-2" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </header>

    <nav class="bg-danger text-white py-2">
        <div class="container d-flex justify-content-center gap-4">
            <div class="dropdown">
                <a class="btn btn-outline-light dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-list"></i> Danh mục sản phẩm
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" asp-controller="Products" asp-action="Category" asp-route-id="1">Bộ ấm chén</a></li>
                    <li><a class="dropdown-item" asp-controller="Products" asp-action="Category" asp-route-id="2">Lọ hoa</a></li>
                    <li><a class="dropdown-item" asp-controller="Products" asp-action="Category" asp-route-id="3">Tượng gốm</a></li>
                    <li><a class="dropdown-item" asp-controller="Products" asp-action="Category" asp-route-id="4">Đồ thờ</a></li>
                    <li><a class="dropdown-item" asp-controller="Products" asp-action="Category" asp-route-id="5">Quà tặng</a></li>
                </ul>
            </div>

            <a class="text-white text-decoration-none" asp-controller="Home" asp-action="Index">Trang chủ</a>
            <a class="text-white text-decoration-none" asp-controller="Home" asp-action="About">Giới Thiệu</a>
            <a class="text-white text-decoration-none" asp-controller="News" asp-action="Index">Tin tức</a>
            <a class="text-white text-decoration-none" asp-controller="Home" asp-action="Contact">Liên hệ</a>
        </div>
    </nav>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light py-3">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - GomSu. All rights reserved.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
